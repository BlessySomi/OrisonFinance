<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Indian Bakery</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="index">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="taxinvoice">
                <span class="oi oi-document" aria-hidden="true"></span> Tax Invoice
            </NavLink>
        </li>
        @if (MoreClick == 1)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" @onclick="@btnMore1">
                    <span class="oi oi-chevron-bottom" aria-hidden="true"></span>Less
                </NavLink>
            </li>
        }
        else
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" @onclick="@btnMore">
                    <span class="oi oi-chevron-right" aria-hidden="true"></span>More
                </NavLink>
            </li>
        }
        @if (MoreClick == 1)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-list" aria-hidden="true"></span> Sales Order
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-calculator" aria-hidden="true"></span> Calculator
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-dollar" aria-hidden="true"></span> Cash In & Out
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-question-mark" aria-hidden="true"></span> POS Help
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-question-mark" aria-hidden="true"></span> Price Enquiry
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-question-mark" aria-hidden="true"></span> Stock Enquiry
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-box" aria-hidden="true"></span> Cash Drawer
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-sun" aria-hidden="true"></span> Start of Day
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Report
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="#">
                    <span class="oi oi-people" aria-hidden="true"></span> Group Details
                </NavLink>
            </li>
        }
    </ul>
</div>
@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    int MoreClick;
    void btnMore(MouseEventArgs args)
    {
        MoreClick = 1;
    }
    void btnMore1(MouseEventArgs args)
    {
        MoreClick = 0;
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
